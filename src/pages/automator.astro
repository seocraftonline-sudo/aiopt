document.getElementById('downloadMarkdown')?.addEventListener('click', () => {
  const markdown = projectData.content
    .replace(/<h2>/g, '## ')
    .replace(/<\/h2>/g, '\n\n')
    .replace(/<h3>/g, '### ')
    .replace(/<\/h3>/g, '\n\n')
    .replace(/<p>/g, '')
    .replace(/<\/p>/g, '\n\n')
    .replace(/<ul>/g, '\n')
    .replace(/<\/ul>/g, '\n')
    .replace(/<li>/g, '- ')
    .replace(/<\/li>/g, '\n');

  const fullMarkdown = `# ${projectData.title}\n\n${markdown}`;
  const blob = new Blob([fullMarkdown], { type: 'text/markdown' });
  const url = URL.createObjectURL(blob);
  const a = document.createElement('a');
  a.href = url;
  a.download = `${projectData.keyword.replace(/\s+/g, '-')}.md`;
  a.click();
  URL.revokeObjectURL(url);
});

document.getElementById('openEditor')?.addEventListener('click', () => {
  localStorage.setItem('editorContent', projectData.content);
  localStorage.setItem('editorTitle', projectData.title);
  window.location.href = '/editor';
});

document.getElementById('startOver')?.addEventListener('click', () => {
  if (confirm('Start a new project? Current progress will be lost.')) {
    projectData = {
      keyword: '',
      audience: '',
      contentType: '',
      analysis: {},
      content: '',
      title: '',
      score: 0,
      wordCount: 0
    };
    (document.getElementById('targetKeyword') as HTMLInputElement).value = '';
    showStep(1);
  }
});

updateProgressBar(1);
