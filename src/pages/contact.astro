---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
---
<Layout>
<Nav/>
<main class="mn">
<header class="hd">
<h1 class="tl">Contact Us</h1>
<p class="st">Get in touch with our team - we're here to help</p>
</header>
<div class="gr">
<div class="fm-sc">
<h2 class="sc-tl">Send us a message</h2>
<p class="sc-ds">Fill out the form below and our team will get back to you within 24 hours</p>
<form class="fm" id="contactForm">
<label class="lb">
<span class="lb-tx">Your Name</span>
<input type="text" class="in" placeholder="John Doe" required>
</label>
<label class="lb">
<span class="lb-tx">Email Address</span>
<input type="email" class="in" placeholder="john@example.com" required>
</label>
<label class="lb">
<span class="lb-tx">Subject</span>
<input type="text" class="in" placeholder="How can we help?" required>
</label>
<label class="lb">
<span class="lb-tx">Message</span>
<textarea class="tx" rows="6" placeholder="Tell us more about your inquiry..." required></textarea>
</label>
<button type="submit" class="bt">Send Message</button>
</form>
</div>
<div class="if-sc">
<h2 class="sc-tl">Other ways to reach us</h2>
<div class="if-ls">
<div class="if-cd">
<div class="if-ic">üìß</div>
<div>
<h3 class="if-tl">Email</h3>
<p class="if-tx">support@contentflow.com</p>
<p class="if-ds">We'll respond within 24 hours</p>
</div>
</div>
<div class="if-cd">
<div class="if-ic">üí¨</div>
<div>
<h3 class="if-tl">Live Chat</h3>
<p class="if-tx">Available 9am - 5pm EST</p>
<p class="if-ds">Chat with us on Facebook Messenger</p>
</div>
</div>
<div class="if-cd">
<div class="if-ic">üë•</div>
<div>
<h3 class="if-tl">Community</h3>
<p class="if-tx">Join our Facebook Group</p>
<p class="if-ds">Connect with other users</p>
</div>
</div>
<div class="if-cd">
<div class="if-ic">üìç</div>
<div>
<h3 class="if-tl">Office</h3>
<p class="if-tx">123 Content Street</p>
<p class="if-ds">San Francisco, CA 94102</p>
</div>
</div>
</div>
<div class="sc-ft">
<h3 class="ft-tl">Follow Us</h3>
<div class="sc-ls">
<a href="#" class="sc-lk">Twitter</a>
<a href="#" class="sc-lk">Facebook</a>
<a href="#" class="sc-lk">LinkedIn</a>
<a href="#" class="sc-lk">Instagram</a>
</div>
</div>
</div>
</div>
</main>
<script>
const contactForm = document.getElementById('contactForm') as HTMLFormElement;

contactForm.addEventListener('submit', (e) => {
  e.preventDefault();
  alert('Thank you for your message! We\'ll get back to you within 24 hours.');
  contactForm.reset();
});
</script>
</Layout>
<style>.mn{margin-left:240px;padding:32px;min-height:100vh;max-width:1400px;animation:sf .4s ease}.hd{margin-bottom:32px;text-align:center}.tl{font-size:32px;font-weight:700;margin:0 0 8px 0;color:#1f2937}.st{font-size:15px;color:#6b7280;margin:0}.gr{display:grid;grid-template-columns:1.2fr 1fr;gap:32px}.fm-sc,.if-sc{background:#fff;border:2px solid #e5e7eb;border-radius:16px;padding:32px;box-shadow:0 2px 8px rgba(0,0,0,.06),0 8px 24px rgba(0,0,0,.04)}.sc-tl{font-size:22px;font-weight:700;color:#1f2937;margin:0 0 8px 0}.sc-ds{font-size:14px;color:#6b7280;margin:0 0 28px 0}.fm{display:flex;flex-direction:column;gap:20px}.lb{display:flex;flex-direction:column;gap:8px}.lb-tx{font-size:14px;font-weight:600;color:#374151}.in,.tx{background:#fafafa;border:2px solid #e5e7eb;border-radius:10px;padding:12px 14px;font-size:14px;color:#1f2937;font-family:inherit;transition:all .2s ease}.in:focus,.tx:focus{outline:none;border-color:#10b981;background:#fff;box-shadow:0 0 0 3px rgba(16,185,129,.1)}.tx{resize:vertical;line-height:1.6}.bt{background:#1f2937;border:none;border-radius:10px;padding:14px 24px;font-size:15px;font-weight:600;color:#fff;cursor:pointer;transition:all .25s ease}.bt:hover{background:#111827;transform:translateY(-2px);box-shadow:0 4px 12px rgba(0,0,0,.2)}.if-ls{display:flex;flex-direction:column;gap:20px;margin-bottom:32px}.if-cd{display:flex;align-items:flex-start;gap:16px;padding:20px;background:#fafafa;border:1px solid #f3f4f6;border-radius:12px;transition:all .2s ease}.if-cd:hover{background:#fff;border-color:#e5e7eb}.if-ic{font-size:32px;flex-shrink:0}.if-tl{font-size:16px;font-weight:700;color:#1f2937;margin:0 0 4px 0}.if-tx{font-size:14px;color:#10b981;font-weight:600;margin:0 0 4px 0}.if-ds{font-size:13px;color:#6b7280;margin:0}.sc-ft{padding-top:24px;border-top:2px solid #f3f4f6}.ft-tl{font-size:16px;font-weight:700;color:#1f2937;margin:0 0 16px 0}.sc-ls{display:flex;flex-wrap:wrap;gap:12px}.sc-lk{display:inline-block;padding:10px 20px;background:#fafafa;border:1px solid #e5e7eb;border-radius:8px;font-size:14px;font-weight:600;color:#374151;text-decoration:none;transition:all .2s ease}.sc-lk:hover{background:#fff;border-color:#10b981;color:#10b981;transform:translateY(-2px)}@media(max-width:768px){.mn{margin-left:72px;padding:20px}.gr{grid-template-columns:1fr}}@media(max-width:480px){.mn{margin-left:0;padding:16px;padding-top:80px}.fm-sc,.if-sc{padding:24px}}</style>
