<div class="md" id="ticketModal" style="display:none">
<div class="md-ct">
<div class="md-hd">
<h2 class="md-tl">Create New Ticket</h2>
<button class="md-cl" id="closeModal">âœ•</button>
</div>
<form class="md-fm" id="ticketForm">
<label class="lb">
<span class="lb-tx">Subject</span>
<input type="text" class="in" placeholder="Brief description of your issue" required>
</label>
<label class="lb">
<span class="lb-tx">Category</span>
<select class="sl" required>
<option value="">Select a category</option>
<option value="billing">Billing & Payments</option>
<option value="technical">Technical Issue</option>
<option value="feature">Feature Request</option>
<option value="account">Account Support</option>
<option value="other">Other</option>
</select>
</label>
<label class="lb">
<span class="lb-tx">Priority</span>
<select class="sl" required>
<option value="low">Low</option>
<option value="medium" selected>Medium</option>
<option value="high">High</option>
<option value="urgent">Urgent</option>
</select>
</label>
<label class="lb">
<span class="lb-tx">Description</span>
<textarea class="tx" rows="6" placeholder="Please provide detailed information about your issue..." required></textarea>
</label>
<div class="md-ft">
<button type="button" class="bt-sc" id="cancelBtn">Cancel</button>
<button type="submit" class="bt-pr">Submit Ticket</button>
</div>
</form>
</div>
</div>
<script>
const newTicketBtn = document.querySelector('.nt-bt') as HTMLButtonElement;
const modal = document.getElementById('ticketModal') as HTMLDivElement;
const closeModal = document.getElementById('closeModal') as HTMLButtonElement;
const cancelBtn = document.getElementById('cancelBtn') as HTMLButtonElement;
const ticketForm = document.getElementById('ticketForm') as HTMLFormElement;

newTicketBtn.addEventListener('click', () => {
  modal.style.display = 'flex';
});

closeModal.addEventListener('click', () => {
  modal.style.display = 'none';
});

cancelBtn.addEventListener('click', () => {
  modal.style.display = 'none';
});

modal.addEventListener('click', (e) => {
  if (e.target === modal) {
    modal.style.display = 'none';
  }
});

ticketForm.addEventListener('submit', (e) => {
  e.preventDefault();
  alert('Ticket submitted successfully! Our support team will get back to you soon.');
  modal.style.display = 'none';
  ticketForm.reset();
});
</script>
</Layout>
<style>.mn{margin-left:240px;padding:32px;min-height:100vh;max-width:1400px;animation:sf .4s ease}.hd{display:flex;align-items:center;gap:20px;margin-bottom:40px;padding-bottom:24px;border-bottom:2px solid #f3f4f6}.hd-ic{font-size:40px;background:#fff;border:2px solid #e5e7eb;padding:14px;border-radius:12px;display:flex;align-items:center;justify-content:center;box-shadow:0 2px 8px rgba(0,0,0,.06)}.hd-tx{flex-grow:1}.tl{font-size:28px;font-weight:700;margin:0 0 4px 0;color:#1f2937}.st{font-size:15px;color:#6b7280;margin:0}.nt-bt{background:#1f2937;border:none;border-radius:10px;padding:12px 24px;font-size:14px;font-weight:600;color:#fff;cursor:pointer;transition:all .25s ease;white-space:nowrap}.nt-bt:hover{background:#111827;transform:translateY(-2px);box-shadow:0 4px 12px rgba(0,0,0,.2)}.em{background:#fff;border:2px solid #e5e7eb;border-radius:16px;padding:60px 40px;text-align:center;box-shadow:0 2px 8px rgba(0,0,0,.06);margin-bottom:40px}.em-ic{font-size:64px;margin-bottom:12px}.em-tx{font-size:16px;color:#6b7280;margin:0}.hp{background:#fff;border:2px solid #e5e7eb;border-radius:16px;padding:32px;box-shadow:0 2px 8px rgba(0,0,0,.06)}.hp-tl{font-size:20px;font-weight:700;color:#1f2937;margin:0 0 24px 0}.hp-gr{display:grid;grid-template-columns:repeat(auto-fit,minmax(300px,1fr));gap:20px}.hp-cd{display:flex;align-items:center;gap:16px;padding:20px;background:#fafafa;border:1px solid #f3f4f6;border-radius:12px;text-decoration:none;transition:all .2s ease}.hp-cd:hover{background:#fff;border-color:#e5e7eb;transform:translateY(-2px);box-shadow:0 4px 12px rgba(0,0,0,.1)}.hp-ic{font-size:32px;flex-shrink:0}.hp-nm{font-size:16px;font-weight:700;color:#1f2937;margin:0 0 4px 0}.hp-ds{font-size:13px;color:#6b7280;margin:0}.md{display:none;position:fixed;inset:0;background:rgba(0,0,0,.5);z-index:1000;align-items:center;justify-content:center;padding:20px;backdrop-filter:blur(4px)}.md-ct{background:#fff;border-radius:16px;width:100%;max-width:600px;max-height:90vh;overflow-y:auto;box-shadow:0 20px 60px rgba(0,0,0,.3)}.md-hd{display:flex;align-items:center;justify-content:space-between;padding:24px 32px;border-bottom:2px solid #f3f4f6}.md-tl{font-size:20px;font-weight:700;color:#1f2937;margin:0}.md-cl{background:transparent;border:none;font-size:24px;color:#6b7280;cursor:pointer;padding:4px;line-height:1;transition:all .2s ease}.md-cl:hover{color:#1f2937;transform:rotate(90deg)}.md-fm{padding:32px}.lb{display:flex;flex-direction:column;gap:8px;margin-bottom:20px}.lb-tx{font-size:14px;font-weight:600;color:#374151}.in,.sl,.tx{background:#fafafa;border:2px solid #e5e7eb;border-radius:10px;padding:12px 14px;font-size:14px;color:#1f2937;font-family:inherit;transition:all .2s ease}.in:focus,.sl:focus,.tx:focus{outline:none;border-color:#10b981;background:#fff;box-shadow:0 0 0 3px rgba(16,185,129,.1)}.tx{resize:vertical;line-height:1.6}.md-ft{display:flex;gap:12px;justify-content:flex-end;margin-top:28px}.bt-sc,.bt-pr{border:none;border-radius:10px;padding:12px 24px;font-size:14px;font-weight:600;cursor:pointer;transition:all .25s ease}.bt-sc{background:#e5e7eb;color:#374151}.bt-sc:hover{background:#d1d5db}.bt-pr{background:#1f2937;color:#fff}.bt-pr:hover{background:#111827;transform:translateY(-1px);box-shadow:0 4px 12px rgba(0,0,0,.2)}@media(max-width:768px){.mn{margin-left:72px;padding:20px}.hd{flex-wrap:wrap}.hp-gr{grid-template-columns:1fr}}@media(max-width:480px){.mn{margin-left:0;padding:16px;padding-top:80px}.md-ct{max-width:100%}.md-fm{padding:24px}}</style>
