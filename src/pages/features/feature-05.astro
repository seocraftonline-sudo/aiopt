<script>
let currentStep = 1;
let selectedLanguages = [];
let translationData = {};

// Step navigation
function showStep(step) {
  document.querySelectorAll('.st-bx').forEach(box => box.style.display = 'none');
  document.getElementById(`step${step}`).style.display = 'block';
  
  // Update progress
  document.querySelectorAll('.pr-it').forEach((item, index) => {
    item.classList.toggle('cp', index + 1 === step);
    item.classList.toggle('cm', index + 1 < step);
  });
  
  currentStep = step;
}

// Step 1: Setup
document.getElementById('nextStep1').addEventListener('click', () => {
  const content = document.getElementById('sourceContent').value;
  if (!content.trim()) {
    alert('Please enter content to translate');
    return;
  }
  
  selectedLanguages = Array.from(document.querySelectorAll('.tg-ch input:checked')).map(cb => cb.value);
  if (selectedLanguages.length === 0) {
    alert('Please select at least one target language');
    return;
  }
  
  showStep(2);
  simulateTranslation();
});

// Language selection
document.querySelectorAll('.tg-ch input').forEach(checkbox => {
  checkbox.addEventListener('change', updateLanguageStats);
});

function updateLanguageStats() {
  const selected = document.querySelectorAll('.tg-ch input:checked').length;
  document.getElementById('selectedCount').textContent = selected;
  document.getElementById('estimatedCost').textContent = `$${(selected * 15).toFixed(0)}`;
}

// File upload
document.getElementById('fileInput').addEventListener('change', function(e) {
  const file = e.target.files[0];
  if (file) {
    document.getElementById('fileName').textContent = file.name;
    // Simulate file reading
    const reader = new FileReader();
    reader.onload = function(e) {
      document.getElementById('sourceContent').value = 'File content loaded: ' + file.name;
    };
    reader.readAsText(file);
  }
});

// Step 2: Translation
document.getElementById('backStep2').addEventListener('click', () => showStep(1));
document.getElementById('nextStep2').addEventListener('click', () => showStep(3));

function simulateTranslation() {
  const progressItems = document.querySelectorAll('.pr-it');
  let currentIndex = 0;
  
  function updateProgress() {
    if (currentIndex < progressItems.length) {
      const item = progressItems[currentIndex];
      const progressBar = item.querySelector('.pr-fl');
      const status = item.querySelector('.pr-st');
      
      // Simulate progress
      let width = 0;
      const interval = setInterval(() => {
        width += 10;
        progressBar.style.width = width + '%';
        
        if (width >= 100) {
          clearInterval(interval);
          status.textContent = '‚úì Complete';
          status.className = 'pr-st completed';
          currentIndex++;
          setTimeout(updateProgress, 500);
        }
      }, 100);
    }
  }
  
  updateProgress();
}

// Translation preview tabs
document.querySelectorAll('.tb-bt').forEach(button => {
  button.addEventListener('click', function() {
    const lang = this.dataset.lang;
    
    // Update active tab
    document.querySelectorAll('.tb-bt').forEach(btn => btn.classList.remove('active'));
    this.classList.add('active');
    
    // Show corresponding content
    document.querySelectorAll('.cn-bx').forEach(box => box.classList.remove('active'));
    document.querySelector(`[data-lang="${lang}"]`).classList.add('active');
  });
});

// Step 3: Localization
document.getElementById('backStep3').addEventListener('click', () => showStep(2));
document.getElementById('nextStep3').addEventListener('click', () => showStep(4));

// Apply localization changes
document.querySelectorAll('.ac-bt.apply').forEach(button => {
  button.addEventListener('click', function() {
    this.textContent = '‚úì Applied';
    this.style.background = '#10b981';
    this.disabled = true;
  });
});

// Step 4: Export
document.getElementById('backStep4').addEventListener('click', () => showStep(3));

document.getElementById('completeProject').addEventListener('click', function() {
  alert('Project completed successfully! All translations have been processed and are ready for use.');
});

// Export buttons
document.querySelectorAll('.ex-bt').forEach(button => {
  button.addEventListener('click', function() {
    const format = this.previousElementSibling.value;
    const action = this.textContent;
    
    if (action === 'Download') {
      // Simulate download
      const blob = new Blob(['Translated content in ' + format + ' format'], { type: 'text/plain' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = `translations.${format}`;
      a.click();
      URL.revokeObjectURL(url);
    } else if (action === 'Publish') {
      alert(`Publishing to ${format}...`);
    }
  });
});

// Initialize
showStep(1);
updateLanguageStats();
</script>
