<style>
.mn{margin-left:240px;padding:48px;min-height:100vh;max-width:1400px;margin-right:auto;background:#f8fafc;animation:sf .4s ease}
.hd{text-align:center;margin-bottom:64px;padding:48px 32px 0}
.tl{font-size:48px;font-weight:800;color:#2563eb;margin:0 0 16px 0;line-height:1.2;letter-spacing:-0.02em}
.st{font-size:20px;color:#64748b;margin:0;font-weight:500;max-width:800px;margin:0 auto}

.qs{display:grid;grid-template-columns:repeat(2,1fr);gap:24px;margin-bottom:80px}
.qs-btn{display:flex;align-items:center;gap:20px;padding:28px;background:#fff;border:2px solid #e2e8f0;border-radius:16px;text-decoration:none;transition:all .3s cubic-bezier(.4,0,.2,1);box-shadow:0 4px 6px rgba(0,0,0,.05),0 1px 3px rgba(0,0,0,.03);position:relative;overflow:hidden}
.qs-btn::before{content:'';position:absolute;top:0;left:0;right:0;bottom:0;background:linear-gradient(135deg,rgba(37,99,235,.05) 0%,rgba(59,130,246,.05) 100%);opacity:0;transition:opacity .3s ease}
.qs-btn:hover{transform:translateY(-4px);box-shadow:0 12px 24px rgba(37,99,235,.15),0 4px 8px rgba(37,99,235,.08);border-color:#3b82f6}
.qs-btn:hover::before{opacity:1}
.qs-btn.pr .ic{background:#3b82f6;color:#fff}
.qs-btn.sc .ic{background:#10b981;color:#fff}
.qs-btn.tr .ic{background:#f59e0b;color:#fff}
.qs-btn.qu .ic{background:#8b5cf6;color:#fff}
.ic{width:64px;height:64px;display:flex;align-items:center;justify-content:center;border-radius:12px;font-size:28px;flex-shrink:0;box-shadow:0 4px 12px rgba(0,0,0,.1);transition:transform .3s ease}
.qs-btn:hover .ic{transform:scale(1.1)}
.tx{flex:1;min-width:0}
.lb{font-size:20px;font-weight:700;color:#1a202c;margin-bottom:4px;line-height:1.3}
.ds{font-size:14px;color:#64748b;line-height:1.5}

.ft{margin-bottom:80px}
.ft-hd{text-align:center;margin-bottom:48px}
.ft-hd h2{font-size:36px;font-weight:800;color:#1a202c;margin:0 0 12px 0}
.ft-hd p{font-size:18px;color:#64748b;margin:0}
.ft-gd{display:grid;grid-template-columns:repeat(3,1fr);gap:32px}
.ft-cd{background:#fff;padding:32px;border:2px solid #e2e8f0;border-radius:16px;transition:all .3s ease;box-shadow:0 4px 6px rgba(0,0,0,.05)}
.ft-cd:hover{transform:translateY(-4px);box-shadow:0 12px 24px rgba(0,0,0,.1);border-color:#3b82f6}
.ft-ic{font-size:48px;margin-bottom:20px}
.ft-cd h3{font-size:20px;font-weight:700;color:#1a202c;margin:0 0 12px 0}
.ft-cd p{font-size:15px;color:#64748b;line-height:1.7;margin:0}

.hw{margin-bottom:80px}
.hw-hd{text-align:center;margin-bottom:48px}
.hw-hd h2{font-size:36px;font-weight:800;color:#1a202c;margin:0 0 12px 0}
.hw-hd p{font-size:18px;color:#64748b;margin:0}
.hw-st{display:flex;align-items:flex-start;justify-content:center;gap:24px;flex-wrap:wrap}
.st-it{background:#fff;padding:32px;border:2px solid #e2e8f0;border-radius:16px;flex:1;min-width:200px;max-width:250px;text-align:center;transition:all .3s ease;box-shadow:0 4px 6px rgba(0,0,0,.05)}
.st-it:hover{transform:translateY(-4px);box-shadow:0 12px 24px rgba(0,0,0,.1);border-color:#3b82f6}
.st-nm{width:56px;height:56px;background:#3b82f6;color:#fff;border-radius:50%;display:flex;align-items:center;justify-content:center;font-size:24px;font-weight:800;margin:0 auto 20px;box-shadow:0 4px 12px rgba(37,99,235,.3)}
.st-ct h3{font-size:18px;font-weight:700;color:#1a202c;margin:0 0 8px 0}
.st-ct p{font-size:14px;color:#64748b;line-height:1.6;margin:0}
.st-ar{font-size:32px;color:#cbd5e1;font-weight:700;flex-shrink:0}

.ct{background:#2563eb;border-radius:24px;padding:64px;text-align:center;box-shadow:0 20px 48px rgba(37,99,235,.25);margin-bottom:48px}
.ct-bx h2{font-size:36px;font-weight:800;color:#fff;margin:0 0 16px 0}
.ct-bx p{font-size:18px;color:#e0e7ff;margin:0 0 32px 0}
.ct-btn{display:inline-block;background:#fff;color:#2563eb;padding:16px 48px;border-radius:12px;font-size:18px;font-weight:700;text-decoration:none;transition:all .3s ease;box-shadow:0 4px 12px rgba(0,0,0,.1)}
.ct-btn:hover{transform:translateY(-2px);box-shadow:0 8px 24px rgba(0,0,0,.2)}

@keyframes sf{from{opacity:0;transform:translateY(20px)}to{opacity:1;transform:translateY(0)}}

@media(max-width:1200px){
.qs{grid-template-columns:1fr}
.ft-gd{grid-template-columns:repeat(2,1fr)}
.hw-st{flex-wrap:wrap}
.st-ar{display:none}
}

@media(max-width:768px){
.mn{margin-left:72px;padding:32px}
.hd{padding:32px 16px}
.tl{font-size:36px}
.st{font-size:16px}
.ft-gd{grid-template-columns:1fr}
.st-it{max-width:none}
}

@media(max-width:480px){
.mn{margin-left:0;padding:20px;padding-top:80px}
.tl{font-size:32px}
.qs-btn{padding:20px}
.ic{width:48px;height:48px;font-size:24px}
.lb{font-size:18px}
}
</style>
